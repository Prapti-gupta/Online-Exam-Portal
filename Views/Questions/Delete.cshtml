@model onlineexamproject.Models.Questions

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href='~/css/dashboard.css' rel='stylesheet'>
    <style>
        .box-center {
            width: 300px;
            margin: 5vh auto 5vh auto;
            margin-top: 70px;
            background: transparent;
            border-radius: 4px;
            font-size: 1rem;
            position: relative;
            width: 800px;
            backdrop-filter: blur(25px);
            border: 2px solid var(--primary-color);
            border-radius: 15px;
            padding: 2em 2em 3em 2em;
            color: var(--second-color);
            box-shadow: 0px 0px 10px 2px rgba(0,0,0,0.2);
            background-color: #F1F8E8;
        }

        .btn {
            margin: 10px;
        }
    </style>
</head>

<body>
    <div class="head">
        <div class="side-nav">
            <img src="~/images/logo.png" height="50px" width="90px" />
            <div class="user">
                <img src="~/images/profile-pic.png" class="user-img">
                <div>
                    <strong>Username:</strong> @ViewBag.Username<br>
                    <strong>User ID:</strong> @ViewBag.Id
                </div>
                <img src="~/images/star.png" class="star-png">
            </div>
            <ul>
                <li class="hover"><img src="~/images/dashboard.png"><p><a asp-area="" asp-controller="TeacherDashboard" asp-action="TeacherDashboard" style="color: #F1F8E8; text-decoration:none">DashBoard</a></p></li>
                <li class="hover"><img src="~/images/course.png"><p><p><a asp-area="" asp-controller="Course" asp-action="Index" style="color: #F1F8E8; text-decoration:none">Add Course</a></p></li>
                <li class="hover"><img src="~/images/exam.png"><p><a asp-area="" asp-controller="Exam" asp-action="Index" style="color: #F1F8E8; text-decoration:none">Add Exam</a></p></li>
                <li class="hover"><img src="~/images/test.png"><p><a asp-area="" asp-controller="Questions" asp-action="Index" style="color: #F1F8E8; text-decoration:none">Add Questions</a></p></li>
                <li class="hover"><img src="~/images/result.png"><p><a asp-area="" asp-controller="Result" asp-action="Index" style="color: #F1F8E8; text-decoration:none">Result</a></p></li>
            </ul>

            <ul>
                <li style="color:white;"><img src="~/images/logout.png"><p><a asp-area="" asp-controller="Home" asp-action="Index" style="color: #F1F8E8; text-decoration:none">Log Out</a></p></li>
            </ul>
        </div>
        <div class="main-body">
            <div class="box-center">


<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExamId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExamId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Question)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Question)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.op_1)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.op_1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.op_2)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.op_2)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.op_3)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.op_3)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.op_4)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.op_4)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Correct_Answer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Correct_Answer)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Q_Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>

            </div>
        </div>
    </div>
</body>
</html>

