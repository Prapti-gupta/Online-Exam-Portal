@model onlineexamproject.Models.Questions

@{
    ViewData["Title"] = Model.Q_Id==0 ? "Add Question": "Update Question";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link href='~/css/dashboard.css' rel='stylesheet'>
    <style>
        .box-center {
            width: 300px;
            margin: 5vh auto 5vh auto;
            margin-top: 20px;
            background: transparent;
            border-radius: 4px;
            font-size: 1rem;
            position: relative;
            width: 500px;
            backdrop-filter: blur(25px);
            border: 2px solid var(--primary-color);
            border-radius: 15px;
            padding: 2em 2em 3em 2em;
            color: var(--second-color);
            box-shadow: 0px 0px 10px 2px rgba(0,0,0,0.2);
            background-color: #F1F8E8;
        }

        .btn {
            margin: 10px;
        }

        .form-group {
            padding: 10px;
        }
    </style>
</head>

<body>
    <div class="head">
        <div class="side-nav">
            <img src="~/images/logo.png" height="50px" width="90px" />
            <div class="user">
                <img src="~/images/profile-pic.png" class="user-img">
                <div>
                    <strong>Username:</strong> @ViewBag.Username<br>
                    <strong>User ID:</strong> @ViewBag.Id
                </div>
                <img src="~/images/star.png" class="star-png">
            </div>
            <ul>
                <li class="hover"><img src="~/images/dashboard.png"><p><a asp-area="" asp-controller="TeacherDashboard" asp-action="TeacherDashboard" style="color: #F1F8E8; text-decoration:none">DashBoard</a></p></li>
                <li class="hover"><img src="~/images/course.png"><p><p><a asp-area="" asp-controller="Course" asp-action="Index" style="color: #F1F8E8; text-decoration:none">Add Course</a></p></li>
                <li class="hover"><img src="~/images/exam.png"><p><a asp-area="" asp-controller="Exam" asp-action="Index" style="color: #F1F8E8; text-decoration:none">Add Exam</a></p></li>
                <li class="hover"><img src="~/images/test.png"><p><a asp-area="" asp-controller="Questions" asp-action="Index" style="color: #F1F8E8; text-decoration:none">Add Questions</a></p></li>
                <li class="hover"><img src="~/images/result.png"><p><a asp-area="" asp-controller="Result" asp-action="Index" style="color: #F1F8E8; text-decoration:none">Result</a></p></li>
            </ul>

            <ul>
                <li style="color:white;"><img src="~/images/logout.png"><p><a asp-area="" asp-controller="Home" asp-action="Index" style="color: #F1F8E8; text-decoration:none">Log Out</a></p></li>
            </ul>
        </div>
        <div class="main-body">
            <div class="box-center">
<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddorEdit" asp-controller="Questions" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Q_Id" />
            <div class="form-group">
                <label asp-for="ExamId" class="control-label"></label>
                <input asp-for="ExamId" class="form-control" />
                <span asp-validation-for="ExamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Question" class="control-label"></label>
                <input asp-for="Question" class="form-control" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="op_1" class="control-label"></label>
                <input asp-for="op_1" class="form-control" />
                <span asp-validation-for="op_1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="op_2" class="control-label"></label>
                <input asp-for="op_2" class="form-control" />
                <span asp-validation-for="op_2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="op_3" class="control-label"></label>
                <input asp-for="op_3" class="form-control" />
                <span asp-validation-for="op_3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="op_4" class="control-label"></label>
                <input asp-for="op_4" class="form-control" />
                <span asp-validation-for="op_4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correct_Answer" class="control-label"></label>
                <input asp-for="Correct_Answer" class="form-control" />
                <span asp-validation-for="Correct_Answer" class="text-danger"></span>
            </div>
            
                <input type="submit" value="Save" class="btn btn-primary" />
                <a style="padding-left: 30px" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
